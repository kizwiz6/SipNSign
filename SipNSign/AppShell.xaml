<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="com.kizwiz.sipnsign.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:com.kizwiz.sipnsign.Pages"
    Shell.NavBarHasShadow="False"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="true"
    BackgroundColor="{DynamicResource Primary}"
    ForegroundColor="White"
    TitleColor="White">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="True" IsVisible="True" />
    </Shell.BackButtonBehavior>

    <!-- Main Menu Page -->
    <ShellContent
        Title="Main Menu"
        ContentTemplate="{DataTemplate local:MainMenuPage}"
        Route="MainMenuPage" />

    <!-- Game Page -->
    <ShellContent
        Title="Game"
        Shell.NavBarIsVisible="true"
        ContentTemplate="{DataTemplate local:GamePage}"
        Route="GamePage" />

    <!-- High Scores Page -->
    <ShellContent
        Title="High Scores"
        ContentTemplate="{DataTemplate local:HighScorePage}"
        Route="HighScorePage" />

    <!-- Settings Page -->
    <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate local:SettingsPage}"
        Route="SettingsPage" />

    <!-- Progress Page -->
    <ShellContent
        Title="Progress"
        ContentTemplate="{DataTemplate local:ProgressPage}"
        Route="ProgressPage" />
</Shell>
