<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SipNSign.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SipNSign.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="SipNSign">

    <!-- Main Menu Page -->
    <ShellContent
        Title="Main Menu"
        ContentTemplate="{DataTemplate local:MainMenuPage}"
        Route="MainMenuPage" />

    <!-- Game Page -->
    <ShellContent
        Title="Game"
        ContentTemplate="{DataTemplate local:GamePage}"
        Route="GamePage" />

    <!-- High Scores Page -->
    <ShellContent
        Title="High Scores"
        ContentTemplate="{DataTemplate local:HighScorePage}"
        Route="HighScorePage" />

    <!-- Settings Page -->
    <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate local:SettingsPage}"
        Route="SettingsPage" />
</Shell>
