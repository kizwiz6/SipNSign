<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:com.kizwiz.sipnsign.Resources.Styles">

    <!-- Answer Button Style -->
    <Style x:Key="AnswerButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource Primary}"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="FontSize" Value="{StaticResource BodyFontSize}"/>
        <Setter Property="CornerRadius" Value="{StaticResource StandardCornerRadius}"/>
        <Setter Property="HeightRequest" Value="60"/>
        <Setter Property="Padding" Value="{StaticResource StandardSpacing}"/>
        <Setter Property="Margin" Value="{StaticResource SmallSpacing}"/>
    </Style>

    <!-- Primary Button Style -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource Primary}"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="FontSize" Value="{StaticResource SubtitleFontSize}"/>
        <Setter Property="CornerRadius" Value="{StaticResource StandardCornerRadius}"/>
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="Padding" Value="{StaticResource StandardSpacing}"/>
        <Setter Property="Margin" Value="{StaticResource SmallSpacing}"/>
    </Style>
</ResourceDictionary>