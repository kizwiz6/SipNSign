<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="com.kizwiz.sipnsign.Resources.Themes.DarkThemeResourceDictionary">

    <!-- Background Colors -->
    <Color x:Key="BackgroundColor">#121212</Color>
    <!-- Dark background -->
    <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
    <!-- White for primary text -->
    <Color x:Key="SecondaryTextColor">#AAAAAA</Color>
    <!-- Lighter gray for secondary text -->

    <!-- Define other color resources for dark theme -->
    <Color x:Key="Primary">#512BD4</Color>
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="White">#FFFFFF</Color>

    <!-- Apply to ContentPage and Label styles -->
    <Style TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{DynamicResource BackgroundColor}" />
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
    </Style>
</ResourceDictionary>
