<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="com.kizwiz.sipnsign.Pages.StorePage"
            Style="{StaticResource AppPageStyle}"
            Title="Store">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <!-- Starter Pack -->
            <Border BackgroundColor="{DynamicResource CardBackground}"
                    Opacity="0.95"
                    Padding="15" 
                    StrokeShape="RoundRectangle 10">
                <Grid ColumnDefinitions="*,Auto" RowSpacing="5">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Starter Pack" 
                               TextColor="{DynamicResource CardText}"
                               FontSize="24" 
                               FontAttributes="Bold"
                               Margin="0,0,0,5"/>

                        <Label Text="Basic signs including numbers, colours, and everyday items"
                               TextColor="{DynamicResource CardText}"
                               FontSize="14"/>
                    </VerticalStackLayout>

                    <Button Text="OWNED" 
                            IsEnabled="False"
                            Style="{StaticResource SecondaryButton}"
                            HeightRequest="40"
                            WidthRequest="110"
                            Grid.Column="1"
                            VerticalOptions="Center"/>
                </Grid>
            </Border>

            <!-- Animal Pack -->
            <Border BackgroundColor="{DynamicResource CardBackground}"
                    Opacity="0.95"
                    Padding="15" 
                    StrokeShape="RoundRectangle 10">
                <Grid ColumnDefinitions="*,Auto" RowSpacing="5">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Animal Pack" 
                               TextColor="{DynamicResource CardText}"
                               FontSize="24" 
                               FontAttributes="Bold"
                               Margin="0,0,0,5"/>

                        <Label Text="Signs for all different species of animals - including wildlife!"
                               TextColor="{DynamicResource CardText}"
                               FontSize="14"/>
                    </VerticalStackLayout>

                    <Button Text="{Binding AnimalPackButtonText}" 
                            Command="{Binding PurchasePackCommand}"
                            CommandParameter="animals"
                            IsEnabled="{Binding IsAnimalPackPurchasable}"
                            Style="{StaticResource PrimaryButton}"
                            HeightRequest="40"
                            WidthRequest="110" 
                            Grid.Column="1"
                            VerticalOptions="Center"/>
                </Grid>
            </Border>

            <!-- Geography Pack -->
            <Border BackgroundColor="{DynamicResource CardBackground}"
                    Opacity="0.95"
                    Padding="15" 
                    StrokeShape="RoundRectangle 10">
                <Grid ColumnDefinitions="*,Auto" RowSpacing="5">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Geography Pack" 
                               TextColor="{DynamicResource CardText}"
                               FontSize="24" 
                               FontAttributes="Bold"
                               Margin="0,0,0,5"/>

                        <Label Text="Countries, cities, and travel-related signs"
                               TextColor="{DynamicResource CardText}"
                               FontSize="14"/>
                    </VerticalStackLayout>

                    <Button Text="{Binding GeographyPackButtonText}" 
                            Command="{Binding PurchasePackCommand}"
                            CommandParameter="geography"
                            IsEnabled="{Binding IsGeographyPackPurchasable}"
                            Style="{StaticResource PrimaryButton}"
                            HeightRequest="40"
                            WidthRequest="110"
                            Grid.Column="1"
                            VerticalOptions="Center"/>
                </Grid>
            </Border>

            <!-- Food & Drink Pack -->
            <Border BackgroundColor="{DynamicResource CardBackground}"
                    Opacity="0.95"
                    Padding="15" 
                    StrokeShape="RoundRectangle 10">
                <Grid ColumnDefinitions="*,Auto" RowSpacing="5">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Food &amp; Drink Pack" 
                               TextColor="{DynamicResource CardText}"
                               FontSize="24" 
                               FontAttributes="Bold"
                               Margin="0,0,0,5"/>

                        <Label Text="Signs for food, drinks, and dining"
                               TextColor="{DynamicResource CardText}"
                               FontSize="14"/>
                    </VerticalStackLayout>

                    <Button Text="{Binding FoodPackButtonText}" 
                            Command="{Binding PurchasePackCommand}"
                            CommandParameter="food_drink"
                            IsEnabled="{Binding IsFoodPackPurchasable}"
                            Style="{StaticResource PrimaryButton}"
                            HeightRequest="40"
                            WidthRequest="110"
                            Grid.Column="1"
                            VerticalOptions="Center"/>
                </Grid>
            </Border>

            <!-- Emotions Pack -->
            <Border BackgroundColor="{DynamicResource CardBackground}"
                    Opacity="0.95"
                    Padding="15" 
                    StrokeShape="RoundRectangle 10">
                <Grid ColumnDefinitions="*,Auto" RowSpacing="5">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Emotions Pack" 
                               TextColor="{DynamicResource CardText}"
                               FontSize="24" 
                               FontAttributes="Bold"
                               Margin="0,0,0,5"/>

                        <Label Text="Signs for feelings, emotions, and expressions"
                               TextColor="{DynamicResource CardText}"
                               FontSize="14"/>
                    </VerticalStackLayout>

                    <Button Text="{Binding EmotionsPackButtonText}" 
                            Command="{Binding PurchasePackCommand}"
                            CommandParameter="emotions"
                            IsEnabled="{Binding IsEmotionsPackPurchasable}"
                            Style="{StaticResource PrimaryButton}"
                            HeightRequest="40"
                            WidthRequest="110"
                            Grid.Column="1"
                            VerticalOptions="Center"/>
                </Grid>
            </Border>

            <!-- Sports & Hobbies Pack -->
            <Border BackgroundColor="{DynamicResource CardBackground}"
                    Opacity="0.95"
                    Padding="15" 
                    StrokeShape="RoundRectangle 10">
                <Grid ColumnDefinitions="*,Auto" RowSpacing="5">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Sports &amp; Hobbies Pack" 
                               TextColor="{DynamicResource CardText}"
                               FontSize="24" 
                               FontAttributes="Bold"
                               Margin="0,0,0,5"/>

                        <Label Text="Learn signs for sports, games, and leisure activities!"
                               TextColor="{DynamicResource CardText}"
                               FontSize="14"/>
                    </VerticalStackLayout>

                    <Button Text="{Binding SportsHobbiesPackButtonText}" 
                            Command="{Binding PurchasePackCommand}"
                            CommandParameter="sports_hobbies"
                            IsEnabled="{Binding IsSportsHobbiesPackPurchasable}"
                            Style="{StaticResource PrimaryButton}"
                            HeightRequest="40"
                            WidthRequest="110"
                            Grid.Column="1"
                            VerticalOptions="Center"/>
                </Grid>
            </Border>

            <!-- Premium Themes Pack -->
            <Border BackgroundColor="{DynamicResource CardBackground}"
        Opacity="0.95"
        Padding="15" 
        StrokeShape="RoundRectangle 10">
                <Grid ColumnDefinitions="*,Auto" RowSpacing="5">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Premium Themes Pack" 
                   TextColor="{DynamicResource CardText}"
                   FontSize="24" 
                   FontAttributes="Bold"
                   Margin="0,0,0,5"/>

                        <Label Text="Unlock 8 additional app themes including Dark, Sunset, Forest, Ocean, Neon, and more!"
                   TextColor="{DynamicResource CardText}"
                   FontSize="14"/>
                    </VerticalStackLayout>

                    <Button Text="{Binding ThemesPackButtonText}" 
                Command="{Binding PurchasePackCommand}"
                CommandParameter="premium_themes"
                IsEnabled="{Binding IsThemesPackPurchasable}"
                Style="{StaticResource PrimaryButton}"
                HeightRequest="40"
                WidthRequest="110"
                Grid.Column="1"
                VerticalOptions="Center"/>
                </Grid>
            </Border>

            <!-- Restore Purchases -->
            <Border BackgroundColor="{DynamicResource CardBackground}"
                    Opacity="0.95"
                    Padding="15" 
                    StrokeShape="RoundRectangle 10">
                <Grid RowSpacing="10">
                    <VerticalStackLayout>
                        <Label Text="Previously Purchased?" 
                               TextColor="{DynamicResource CardText}"
                               FontSize="20" 
                               FontAttributes="Bold"
                               Margin="0,0,0,5"/>

                        <Label Text="If you've reinstalled the app or switched devices, restore your purchases here."
                               TextColor="{DynamicResource CardText}"
                               FontSize="14"
                               Margin="0,0,0,10"/>

                        <Button Text="Restore Purchases" 
                                Command="{Binding RestorePurchasesCommand}"
                                Style="{StaticResource PrimaryButton}"/>
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                             IsVisible="{Binding IsLoading}"
                             Color="{DynamicResource Primary}"
                             HeightRequest="50"
                             WidthRequest="50"
                             HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>