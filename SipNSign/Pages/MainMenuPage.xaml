<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="com.kizwiz.sipnsign.Pages.MainMenuPage">
    <!-- This should match the namespace and class name -->
    <VerticalStackLayout>
        <Label Text="Welcome to SipNSign!" 
               VerticalOptions="CenterAndExpand" 
               HorizontalOptions="CenterAndExpand" />
        <Button Text="Start Game" Clicked="OnStartGameClicked" />
        <Button Text="View Scores" Clicked="OnViewScoresClicked" />
        <Button Text="Settings" Clicked="OnSettingsClicked" />
