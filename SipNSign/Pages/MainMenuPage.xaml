<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="com.kizwiz.sipnsign.Pages.MainMenuPage"
             Title="Main Menu">

    <VerticalStackLayout Padding="20" Spacing="30" VerticalOptions="CenterAndExpand">

        <Label Text="Welcome to SipNSign!" 
               VerticalOptions="CenterAndExpand" 
               HorizontalOptions="CenterAndExpand" 
               FontSize="24"
               FontAttributes="Bold" />

        <Button Text="Start Game" 
                Clicked="OnStartGameClicked" 
                BackgroundColor="#007BFF" 
                TextColor="White" 
                HeightRequest="70" 
                FontSize="24" 
                CornerRadius="10" 
                HorizontalOptions="FillAndExpand" />

        <Button Text="View Scores" 
                Clicked="OnViewScoresClicked" 
                BackgroundColor="#007BFF" 
                TextColor="White" 
                HeightRequest="70" 
                FontSize="24" 
                CornerRadius="10" 
                HorizontalOptions="FillAndExpand" />

        <Button Text="Settings" 
                Clicked="OnSettingsClicked" 
                BackgroundColor="#007BFF" 
                TextColor="White" 
                HeightRequest="70" 
                FontSize="24" 
                CornerRadius="10" 
                HorizontalOptions="FillAndExpand" />

    </VerticalStackLayout>
</ContentPage>
