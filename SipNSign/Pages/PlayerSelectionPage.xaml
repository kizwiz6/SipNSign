<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:com.kizwiz.sipnsign.ViewModels"
             x:Class="com.kizwiz.sipnsign.Pages.PlayerSelectionPage"
             x:DataType="viewmodels:PlayerSelectionViewModel"
             Style="{StaticResource AppPageStyle}"
             Title="Player Configuration">

    <Grid Padding="20">
        <VerticalStackLayout x:Name="ModeSelectionLayout" Spacing="20">
            <Label Text="Choose Game Mode" 
                   FontSize="28" 
                   TextColor="White"
                   HorizontalOptions="Center"/>

            <Button Text="Single Player" 
                    Style="{StaticResource PrimaryButton}"
                    Clicked="OnSinglePlayerClicked"/>

            <Button Text="Multiplayer" 
                    Style="{StaticResource PrimaryButton}"
                    Clicked="OnMultiplayerClicked"/>
        </VerticalStackLayout>

        <ScrollView x:Name="PlayerConfigLayout" 
                    IsVisible="False">
            <VerticalStackLayout Spacing="15">
                <!-- Player count indicator -->
                <Label Text="{Binding PlayerCountText}"
                       FontSize="16"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Margin="0,0,0,10"/>

                <!-- Main player (always present) -->
                <Border Padding="10" 
                        BackgroundColor="{DynamicResource CardBackground}"
                        StrokeShape="RoundRectangle 10">
                    <Grid ColumnDefinitions="Auto,*">
                        <Label Text="⭐" 
                               FontSize="24"
                               VerticalOptions="Center"/>
                        <Entry Grid.Column="1" 
                               Text="{Binding MainPlayerName, Mode=TwoWay}" 
                               Placeholder="Your Name (Main Player)"
                               TextColor="{DynamicResource CardText}"
                               MaxLength="15"/>
                    </Grid>
                </Border>

                <!-- Additional players list -->
                <CollectionView ItemsSource="{Binding AdditionalPlayers}"
                                HeightRequest="200">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <SwipeView>
                                <SwipeView.RightItems>
                                    <SwipeItems>
                                        <SwipeItem Text="Delete"
                                                   BackgroundColor="Red"
                                                   Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:PlayerSelectionViewModel}}, Path=RemovePlayerCommand}"
                                                   CommandParameter="{Binding .}"/>
                                    </SwipeItems>
                                </SwipeView.RightItems>

                                <Border Padding="10" 
                                        Margin="0,5"
                                        BackgroundColor="{DynamicResource CardBackground}"
                                        StrokeShape="RoundRectangle 10">
                                    <Entry Text="{Binding Name, Mode=TwoWay}" 
                                           Placeholder="Player Name"
                                           TextColor="{DynamicResource CardText}"
                                           MaxLength="15"/>
                                </Border>
                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Add Player button -->
                <Button Text="Add Player"
                        Command="{Binding AddPlayerCommand}"
                        Style="{StaticResource SecondaryButton}"/>

                <!-- Maximum players warning -->
                <Label Text="⚠️ Maximum 10 players reached"
                       TextColor="Orange"
                       FontSize="14"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       IsVisible="{Binding CanAddMorePlayers, Converter={StaticResource InverseBoolConverter}}"
                       Margin="0,5,0,0"/>

                <!-- Questions Count Setting -->
                <Border Stroke="Gray" 
                        Padding="15" 
                        StrokeShape="RoundRectangle 10"
                        BackgroundColor="{DynamicResource CardBackground}"
                        Opacity="0.95"
                        Margin="0,10,0,0">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Number of Questions"
                               TextColor="{DynamicResource CardText}"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                        <Label x:Name="PerformQuestionsValueLabel"
                               Text="10 questions"
                               TextColor="{DynamicResource CardText}"
                               FontSize="18"
                               HorizontalOptions="Center"/>
                        <Slider x:Name="PerformQuestionsSlider"
                                Minimum="5"
                                Maximum="50"
                                Value="10"
                                ValueChanged="OnPerformQuestionsCountChanged"/>
                        <Label Text="Choose how many signs to perform"
                               TextColor="{DynamicResource CardText}"
                               FontSize="12"
                               HorizontalOptions="Center"
                               Opacity="0.8"/>
                    </VerticalStackLayout>
                </Border>

                <Button Text="Start Game"
                        Style="{StaticResource PrimaryButton}"
                        Clicked="OnStartGameClicked"
                        Margin="0,10,0,0"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>