<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:com.kizwiz.sipnsign.Models"
             xmlns:viewmodels="clr-namespace:com.kizwiz.sipnsign.ViewModels"
             xmlns:converters="clr-namespace:com.kizwiz.sipnsign.Converters"
             x:DataType="viewmodels:ProgressViewModel"
             x:Class="com.kizwiz.sipnsign.Pages.ProgressPage"
             Style="{StaticResource AppPageStyle}"
             Title="Progress">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter"/>
            <converters:BoolToTextColorConverter x:Key="BoolToTextColorConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- Statistics Grid -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="15" RowSpacing="15">
                <!-- Signs Learned -->
                <Frame Grid.Column="0" Grid.Row="0" 
                   BackgroundColor="{DynamicResource CardBackground}"
                   Opacity="0.95"
                   Padding="15" 
                   HasShadow="True">
                    <VerticalStackLayout>
                        <Label Text="Signs Learned"
                           TextColor="{DynamicResource CardText}"
                           HorizontalOptions="Center"/>
                        <Label x:Name="SignsLearnedLabel"
                           Text="{Binding SignsLearned}"
                           FontSize="32"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource CardText}"
                           HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Current Streak -->
                <Frame Grid.Column="1" Grid.Row="0" 
                   BackgroundColor="{DynamicResource CardBackground}"
                   Opacity="0.95"
                   Padding="15" 
                   HasShadow="True">
                    <VerticalStackLayout>
                        <Label Text="Day Streak"
                           TextColor="{DynamicResource CardText}"
                           HorizontalOptions="Center"/>
                        <Label x:Name="StreakLabel"
                           Text="{Binding CurrentStreak}"
                           FontSize="32"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource CardText}"
                           HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Accuracy -->
                <Frame Grid.Column="0" Grid.Row="1" 
                   BackgroundColor="{DynamicResource CardBackground}"
                   Opacity="0.95"
                   Padding="15" 
                   HasShadow="True">
                    <VerticalStackLayout>
                        <Label Text="Accuracy"
                           TextColor="{DynamicResource CardText}"
                           HorizontalOptions="Center"/>
                        <Label x:Name="AccuracyLabel"
                           Text="{Binding AccuracyDisplay}"
                           FontSize="32"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource CardText}"
                           HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Practice Time -->
                <Frame Grid.Column="1" Grid.Row="1" 
                   BackgroundColor="{DynamicResource CardBackground}"
                   Opacity="0.95"
                   Padding="15" 
                   HasShadow="True">
                    <VerticalStackLayout>
                        <Label Text="Practice Time"
                           TextColor="{DynamicResource CardText}"
                           HorizontalOptions="Center"/>
                        <Label x:Name="PracticeTimeLabel"
                           Text="{Binding PracticeTimeDisplay}"
                           FontSize="32"
                           FontAttributes="Bold"
                           TextColor="{DynamicResource CardText}"
                           HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Recent Activity -->
            <Frame BackgroundColor="{DynamicResource CardBackground}"
               Opacity="0.95"
               Padding="15" 
               CornerRadius="10" 
               HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Recent Activity"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource CardText}"/>

                    <CollectionView x:Name="RecentActivityList"
                              ItemsSource="{Binding RecentActivities}"
                              HeightRequest="200"
                              EmptyView="No activities yet - start playing to see your progress!">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:ActivityItem">
                                <Grid Padding="10" ColumnDefinitions="Auto,*,Auto">
                                    <Image Source="{Binding Icon}"
                   HeightRequest="40"
                   WidthRequest="40"
                   Grid.Column="0"/>
                                    <VerticalStackLayout Grid.Column="1" Margin="10,0">
                                        <Label Text="{Binding Description}"
                       TextColor="{DynamicResource CardText}"
                       FontAttributes="Bold"/>
                                        <Label Text="{Binding TimeAgo}"
                       TextColor="{DynamicResource CardText}"
                       Opacity="0.7"
                       FontSize="12"/>
                                    </VerticalStackLayout>
                                    <Label Grid.Column="2"
                   Text="{Binding Score}"
                   TextColor="{DynamicResource CardText}"
                   FontAttributes="Bold"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Achievements -->
            <Frame BackgroundColor="{DynamicResource CardBackground}"
       Opacity="0.95"
       Padding="15" 
       CornerRadius="10" 
       HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Achievements"
               FontSize="20"
               FontAttributes="Bold"
               TextColor="{DynamicResource CardText}"/>
                    <CollectionView x:Name="AchievementsList"
                      ItemsSource="{Binding Achievements}"
                      HeightRequest="200">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10" 
                          ColumnDefinitions="Auto,*,Auto">
                                    <!-- Make the entire grid tappable -->
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer 
                                Tapped="OnAchievementTapped"
                                NumberOfTapsRequired="1"/>
                                    </Grid.GestureRecognizers>

                                    <Image Source="{Binding Icon}"
                               HeightRequest="30"
                               WidthRequest="30"
                               Grid.Column="0"/>
                                    <VerticalStackLayout Grid.Column="1" 
                                           Margin="10,0">
                                        <Label Text="{Binding Description}"
                                   TextColor="{DynamicResource CardText}"
                                   FontAttributes="Bold"/>
                                        <Label Text="{Binding TimeAgo}"
                                   TextColor="{DynamicResource CardText}"
                                   Opacity="0.7"
                                   FontSize="12"/>
                                    </VerticalStackLayout>
                                    <Label Grid.Column="2"
                               Text="{Binding Score}"
                               TextColor="{DynamicResource CardText}"
                               FontAttributes="Bold"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>