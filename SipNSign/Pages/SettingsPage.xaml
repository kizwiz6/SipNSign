<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="com.kizwiz.sipnsign.Pages.SettingsPage"
             Title="Settings">

    <VerticalStackLayout x:Name="ThemeStackLayout" Padding="20" Spacing="20">
        <!-- Title -->
        <Label 
            x:Name="SettingsTitleLabel"
            Text="Settings"
            FontSize="24"
            HorizontalOptions="Center" 
            VerticalOptions="Start"
            TextColor="{DynamicResource PrimaryTextColor}" />

            <!-- Theme Selection Label -->
            <Label 
            x:Name="ThemeSelectionLabel"
                Text="Toggle Theme:"
            FontSize="18"
            VerticalOptions="Start"
            TextColor="{DynamicResource PrimaryTextColor}" />

                <!-- Switch to toggle between Light and Dark Modes -->
                <Switch x:Name="ThemeToggleSwitch" 
                Toggled="OnThemeToggled" 
                VerticalOptions="Start" />

                <!-- Info Label -->
                <Label 
            x:Name="InfoLabel"
                    Text="Switch between Light and Dark modes to customise your app's appearance."
            FontSize="14"
            VerticalOptions="Start" 
            HorizontalOptions="Fill"
            TextColor="{DynamicResource SecondaryTextColor}" />
    </VerticalStackLayout>
</ContentPage>
